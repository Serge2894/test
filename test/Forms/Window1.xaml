<Window x:Class="test.Forms.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test.Forms"
        mc:Ignorable="d"
        Height="600" Width="400" MinWidth="400" MinHeight="600"
        Background="#F5F5F5"
        WindowStyle="None" >
    <Window.Resources>
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="5,5,0,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Selected">
                                <Setter Property="Background" Value="#FFFFFF"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="BorderBrush" Value="#A0A0A0"/>
                                <Setter Property="BorderThickness" Value="1,1,1,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- OK Button Style - Green on hover/press -->
        <Style x:Key="OKButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cancel Button Style - Red on hover/press -->
        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f44336"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#d32f2f"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Background="#DDD" Padding="5" Grid.ColumnSpan="2" MouseDown="Border_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Parameter Mapping" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <Button Grid.Column="1" Content="X" Width="25" Height="25" Padding="0"
                        FontWeight="Bold" FontSize="12" Background="Transparent" BorderThickness="0"
                        HorizontalAlignment="Right" VerticalAlignment="Center" Click="btnClose_Click"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="10,10,0,10">
            <RadioButton x:Name="rbEntireModel" Content="Entire Model" IsChecked="True" Margin="0,0,10,0" GroupName="ViewFilter"/>
            <RadioButton Content="Active View" GroupName="ViewFilter"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Grid.ColumnSpan="2">
            <Button x:Name="btnCurtainwall" Content="Curtain Wall" Style="{StaticResource TabButtonStyle}" Tag="Selected" Height="25" Click="btnCurtainwall_Click"/>
            <Button x:Name="btnStair" Content="Stair" Style="{StaticResource TabButtonStyle}" Height="25" Click="btnStair_Click" />
            <Button x:Name="btnRailling" Content="Railling" Style="{StaticResource TabButtonStyle}" Height="25" Click="btnRailling_Click" />
            <Button x:Name="btnNestedFamilies" Content="Nested Families" Style="{StaticResource TabButtonStyle}" Height="25" Click="btnNestedFamilies_Click" />
        </StackPanel>

        <Grid Grid.Row="3" x:Name="CurtainwallContent"  Grid.ColumnSpan="2">
            <Border Grid.Row="3" Background="#FFFFFF" CornerRadius="5" Grid.ColumnSpan="2" Margin="0,0,0,0" >
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Select Component/s" Grid.Row="0"/>
                    <StackPanel Grid.Row="1" Margin="0,0,0,10" Orientation="Horizontal">
                        <CheckBox x:Name="cbxbCurtainPanel" Content="Curtain Panel" IsChecked="True" Margin="0,2,10,2"/>
                        <CheckBox x:Name="cbxCurtainwallmullions" Content="Curtain wall mullions" IsChecked="True" Margin="0,2"/>
                    </StackPanel>

                    <Label Content="Select Parameters:" Grid.Row="2"/>
                    <Grid Grid.Row="3" Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBox x:Name="txtCurtainwallParameterSearch" 
                             Grid.Row="0"
                             Margin="0,0,0,5"
                             Padding="5,3"                     
                             TextChanged="txtCurtainwallParameterSearch_TextChanged"
                             GotFocus="txtCurtainwallParameterSearch_GotFocus"
                             LostFocus="txtCurtainwallParameterSearch_LostFocus"
                             Text="Search parameters...">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type TextBox}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type TextBox}">
                                                <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                                                    <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <Border Grid.Row="1" 
                            BorderThickness="1" 
                            BorderBrush="#CCCCCC" 
                            Background="White"
                            CornerRadius="5"
                            Margin="0,5,0,0">
                            <ListView x:Name="lvCurtainwallParameters" 
                                      Background="Transparent"
                                      BorderThickness="0"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      SelectionMode="Extended">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                             Content="{Binding ParameterName}"
                                             Margin="2"
                                             FontWeight="{Binding FontWeight}"
                                             Foreground="{Binding TextColor}"
                                             Checked="CurtainwallParameterCheckBox_Changed"
                                             Unchecked="CurtainwallParameterCheckBox_Changed"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>
                    </Grid>

                    <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                        <Button x:Name="btnOK"
                                    Content="OK"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource OKButtonStyle}"
                                    Click="btnOK_Click"/>
                        <Button x:Name="btnCancel"
                                    Content="Cancel"
                                    Style="{StaticResource CancelButtonStyle}"
                                    Click="btnCancel_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="3" x:Name="StairContent"  Grid.ColumnSpan="2">
            <Border Grid.Row="3" Background="#FFFFFF" CornerRadius="5" Grid.ColumnSpan="2" Margin="0,0,0,0" >
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Select Component/s" Grid.Row="0"/>
                    <StackPanel Grid.Row="1" Margin="0,0,0,10" Orientation="Horizontal">
                        <CheckBox x:Name="cbxStairLanding" Content="Landing" IsChecked="True" Margin="0,2,10,2"/>
                        <CheckBox x:Name="cbxStairSupport" Content="Support" IsChecked="True" Margin="0,2"/>
                        <CheckBox x:Name="cbxStairRun" Content="Runs" IsChecked="True" Margin="10,2"/>
                    </StackPanel>

                    <Label Content="Select Parameters:" Grid.Row="2"/>
                    <Grid Grid.Row="3" Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBox x:Name="txtStairParameterSearch" 
                             Grid.Row="0"
                             Margin="0,0,0,5"
                             Padding="5,3"                     
                             TextChanged="txtStairParameterSearch_TextChanged"
                             GotFocus="txtStairParameterSearch_GotFocus"
                             LostFocus="txtStairParameterSearch_LostFocus"
                             Text="Search parameters...">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type TextBox}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type TextBox}">
                                                <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                                                    <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <Border Grid.Row="1" 
                            BorderThickness="1" 
                            BorderBrush="#CCCCCC" 
                            Background="White"
                            CornerRadius="5"
                            Margin="0,5,0,0">
                            <ListView x:Name="lvStairParameters" 
                                      Background="Transparent"
                                      BorderThickness="0"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      SelectionMode="Extended">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                             Content="{Binding ParameterName}"
                                             Margin="2"
                                             FontWeight="{Binding FontWeight}"
                                             Foreground="{Binding TextColor}"
                                             Checked="StairParameterCheckBox_Changed"
                                             Unchecked="StairParameterCheckBox_Changed"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>
                    </Grid>

                    <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                        <Button x:Name="btnStair_OK"
                                    Content="OK"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource OKButtonStyle}"
                                    Click="btnOK_Click"/>
                        <Button x:Name="btnStair_Cancel"
                                    Content="Cancel"
                                    Style="{StaticResource CancelButtonStyle}"
                                    Click="btnCancel_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="3" x:Name="RaillingContent"  Grid.ColumnSpan="2">
            <Border Grid.Row="3" Background="#FFFFFF" CornerRadius="5" Grid.ColumnSpan="2" Margin="0,0,0,0" >
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Select Component/s:" Grid.Row="0"/>
                    <StackPanel Grid.Row="1" Margin="0,0,0,10" Orientation="Horizontal">
                        <CheckBox x:Name="cbxTopRail" Content="Top Rail" IsChecked="True" Margin="0,2,10,2"/>
                        <CheckBox x:Name="cbxHandrail" Content="Handrail" IsChecked="True" Margin="0,2"/>
                        <CheckBox x:Name="cbxRailSupport" Content="Railing Support" IsChecked="True" Margin="10,2"/>
                    </StackPanel>

                    <Label Content="Select Parameters:" Grid.Row="2"/>
                    <Grid Grid.Row="3" Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBox x:Name="txtRaillingParameterSearch" 
                             Grid.Row="0"
                             Margin="0,0,0,5"
                             Padding="5,3"                     
                             TextChanged="txtRaillingParameterSearch_TextChanged"
                             GotFocus="txtRaillingParameterSearch_GotFocus"
                             LostFocus="txtRaillingParameterSearch_LostFocus"
                             Text="Search parameters...">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type TextBox}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type TextBox}">
                                                <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                                                    <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <Border Grid.Row="1" 
                            BorderThickness="1" 
                            BorderBrush="#CCCCCC" 
                            Background="White"
                            CornerRadius="5"
                            Margin="0,5,0,0">
                            <ListView x:Name="lvRaillingParameters" 
                                      Background="Transparent"
                                      BorderThickness="0"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      SelectionMode="Extended">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                             Content="{Binding ParameterName}"
                                             Margin="2"
                                             FontWeight="{Binding FontWeight}"
                                             Foreground="{Binding TextColor}"
                                             Checked="ParameterCheckBox_Changed"
                                             Unchecked="ParameterCheckBox_Changed"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>
                    </Grid>

                    <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                        <Button x:Name="btnRailling_OK"
                                        Content="OK"
                                        Margin="0,0,10,0"
                                        Style="{StaticResource OKButtonStyle}"
                                        Click="btnOK_Click"/>
                        <Button x:Name="btnRailling_Cancel"
                                        Content="Cancel"
                                        Style="{StaticResource CancelButtonStyle}"
                                        Click="btnCancel_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- New Nested Families Content with horizontal layout -->
        <Grid Grid.Row="3" x:Name="NestedFamiliesContent" Grid.ColumnSpan="2">
            <Border Grid.Row="3" Background="#FFFFFF" CornerRadius="5" Grid.ColumnSpan="2" Margin="0,0,0,0">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Horizontal Layout for Nested Families Content -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" MinWidth="250"/>
                            <ColumnDefinition Width="1*" MinWidth="250"/>
                            <ColumnDefinition Width="1*" MinWidth="300"/>
                        </Grid.ColumnDefinitions>

                        <!-- Parent Families Section -->
                        <Grid Grid.Column="0" Margin="0,0,10,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Content="Select Parent Family:" Grid.Row="0" FontWeight="Bold" FontSize="12"/>

                            <TextBox x:Name="txtParentFamilySearch" 
                                     Grid.Row="1"
                                     Margin="0,5,0,5"
                                     Padding="5,3"                     
                                     TextChanged="txtParentFamilySearch_TextChanged"
                                     GotFocus="txtParentFamilySearch_GotFocus"
                                     LostFocus="txtParentFamilySearch_LostFocus"
                                     Text="Search parent families...">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type TextBox}">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="#CCCCCC"
                                                            BorderThickness="1"
                                                            CornerRadius="5">
                                                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                            <Border Grid.Row="2" 
                                    BorderThickness="1" 
                                    BorderBrush="#CCCCCC" 
                                    Background="White"
                                    CornerRadius="5"
                                    Margin="0,5,0,0">
                                <ListView x:Name="lvParentFamilies" 
                                          Background="Transparent"
                                          BorderThickness="0"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          SelectionMode="Single">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                                         Content="{Binding FamilyName}"
                                                         Margin="2"
                                                         FontWeight="{Binding FontWeight}"
                                                         Foreground="{Binding TextColor}"
                                                         Checked="ParentFamilyCheckBox_Changed"
                                                         Unchecked="ParentFamilyCheckBox_Changed"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Border>
                        </Grid>

                        <!-- Nested Families Section -->
                        <Grid Grid.Column="1" Margin="10,0,10,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Content="Select Nested Families:" Grid.Row="0" FontWeight="Bold" FontSize="12"/>

                            <TextBox x:Name="txtNestedFamilySearch" 
                                     Grid.Row="1"
                                     Margin="0,5,0,5"
                                     Padding="5,3"                     
                                     TextChanged="txtNestedFamilySearch_TextChanged"
                                     GotFocus="txtNestedFamilySearch_GotFocus"
                                     LostFocus="txtNestedFamilySearch_LostFocus"
                                     Text="Search nested families...">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type TextBox}">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="#CCCCCC"
                                                            BorderThickness="1"
                                                            CornerRadius="5">
                                                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                            <Border Grid.Row="2" 
                                    BorderThickness="1" 
                                    BorderBrush="#CCCCCC" 
                                    Background="White"
                                    CornerRadius="5"
                                    Margin="0,5,0,0">
                                <ListView x:Name="lvNestedFamilies" 
                                          Background="Transparent"
                                          BorderThickness="0"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          SelectionMode="Extended">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                                         Content="{Binding FamilyName}"
                                                         Margin="2"
                                                         FontWeight="{Binding FontWeight}"
                                                         Foreground="{Binding TextColor}"
                                                         Checked="NestedFamilyCheckBox_Changed"
                                                         Unchecked="NestedFamilyCheckBox_Changed"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Border>
                        </Grid>

                        <!-- Parameters Section -->
                        <Grid Grid.Column="2" Margin="10,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Content="Select Parameters:" Grid.Row="0" FontWeight="Bold" FontSize="12"/>

                            <TextBox x:Name="txtNestedFamilyParameterSearch" 
                                     Grid.Row="1"
                                     Margin="0,5,0,5"
                                     Padding="5,3"                     
                                     TextChanged="txtNestedFamilyParameterSearch_TextChanged"
                                     GotFocus="txtNestedFamilyParameterSearch_GotFocus"
                                     LostFocus="txtNestedFamilyParameterSearch_LostFocus"
                                     Text="Search parameters...">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type TextBox}">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="#CCCCCC"
                                                            BorderThickness="1"
                                                            CornerRadius="5">
                                                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                            <Border Grid.Row="2" 
                                    BorderThickness="1" 
                                    BorderBrush="#CCCCCC" 
                                    Background="White"
                                    CornerRadius="5"
                                    Margin="0,5,0,0">
                                <ListView x:Name="lvNestedFamilyParameters" 
                                          Background="Transparent"
                                          BorderThickness="0"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          SelectionMode="Extended">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                                         Content="{Binding ParameterName}"
                                                         Margin="2"
                                                         FontWeight="{Binding FontWeight}"
                                                         Foreground="{Binding TextColor}"
                                                         Checked="NestedFamilyParameterCheckBox_Changed"
                                                         Unchecked="NestedFamilyParameterCheckBox_Changed"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Button Area -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button x:Name="btnNestedFamilies_OK"
                                Content="OK"
                                Margin="0,0,10,0"
                                Style="{StaticResource OKButtonStyle}"
                                Click="btnOK_Click"/>
                        <Button x:Name="btnNestedFamilies_Cancel"
                                Content="Cancel"
                                Style="{StaticResource CancelButtonStyle}"
                                Click="btnCancel_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>

</Window>